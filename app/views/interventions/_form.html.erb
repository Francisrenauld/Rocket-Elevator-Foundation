<%= form_with(model: intervention, local: true) do |form| %>
  <% if intervention.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(intervention.errors.count, "error") %> prohibited this intervention from being saved:</h2>

      <ul>
      <% intervention.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :author %>
     <%= form.number_field :author %>
  </div>


  <div class="field" id="customer">
    <%= form.label :customer_id %>
    <% options = options_from_collection_for_select(@customer, "id", ->(customer) { "#{customer.id} - #{customer.Company_Name}" }) %>
    <%= form.select :customer_id,  options %>

  <div class="field" id="building">
    <%= form.label :building_id %>
    <% options = options_from_collection_for_select(@building, "id", "id") %>
    <%= form.select :building_id,  options %>
  </div>

  <div class="field">
    <%= form.label :battery_id %>
    <%= form.number_field :battery_id %>
  </div>

  <div class="field">
    <%= form.label :column_id %>
    <%= form.number_field :column_id %>
  </div>

  <div class="field">
    <%= form.label :elevator_id %>
    <%= form.number_field :elevator_id %>
  </div>

  <div class="field">
    <%= form.label :employee_id %>
    <%= form.number_field :employee_id %>
  </div>

  <div class="field">
    <%= form.label :start_date_and_time_of_the_intervention %>
    <%= form.datetime_select :start_date_and_time_of_the_intervention %>
  </div>

  <div class="field">
    <%= form.label :end_date_and_time_of_the_intervention %>
    <%= form.datetime_select :end_date_and_time_of_the_intervention %>
  </div>

  <div class="field">
    <%= form.label :result %>
    <%= form.text_field :result %>
  </div>

  <div class="field">
    <%= form.label :report %>
    <%= form.text_field :report %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
